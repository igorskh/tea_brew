    "version": "0.2.0",
    "configurations": [
        {
            "name": "app (sync)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug"
        },
        {
            "name": "app (hive)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main_hive.dart",
            "flutterMode": "debug"
        },
        {
            "name": "app (hive) mock",
            "request": "launch",
            "type": "dart",
            "program": "lib/main_hive.dart",
            "args": [
                "--dart-define=HIVE_CLEAN_DATA=yes",
                "--dart-define=HIVE_MOCK_DATA=yes"
            ],
            "flutterMode": "debug"
        },
        {
            "name": "app (hive) no data",
            "request": "launch",
            "type": "dart",
            "program": "lib/main_hive.dart",
            "args": [
                "--dart-define=HIVE_CLEAN_DATA=yes",
                "--dart-define=NO_API=yes"
            ],
            "flutterMode": "debug"
        },
        {
            "name": "app (hive-mock) clean",
            "request": "launch",
            "type": "dart",
            "program": "lib/main_hive.dart",
            "args": [
                "--dart-define=HIVE_CLEAN_DATA=yes"
            ],
            "flutterMode": "debug"
        },
    ]
}